<Window x:Class="Mini_Total_Commander.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mini_Total_Commander"
        xmlns:vm="clr-namespace:Mini_Total_Commander.ViewModel"
        xmlns:v="clr-namespace:Mini_Total_Commander.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <vm:TotalCommander x:Key="MainViewModel"/>
        
    </Window.Resources>
    <Grid DataContext="{StaticResource MainViewModel}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="64"/>
        </Grid.RowDefinitions>
            <v:TCpanel x:Name="PanelL"
                Grid.Column="0" Grid.Row="0"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                ViewModel="{Binding LeftPanelVM}"
            />
            <v:TCpanel x:Name="PanelR"
                Grid.Column="1" Grid.Row="0"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                ViewModel="{Binding RightPanelVM}"
            />
        <Button x:Name="CopyL" 
            Grid.Column="0" Grid.Row="1"
            HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="32"
            Content="Kopiuj"
            
            />
        <Button x:Name="CopyR"
            Grid.Column="1" Grid.Row="1"
            HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="32"
            Content="Kopiuj"
            />
    </Grid>
</Window>
